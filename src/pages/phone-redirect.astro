---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mobile Redirect | Hoogly" description="Please open this link on your mobile device." type="website">
  <div style="min-height: 100vh; display: flex; align-items: flex-start; justify-content: center; padding: 8rem 2rem 2rem 2rem;">
    <div style="background: #fff; border-radius: 1.5rem; box-shadow: 0 4px 24px 0 rgba(0,0,0,0.04); padding: 3rem 2rem; max-width: 500px; width: 100%; text-align: center;">
      <h1 style="font-family: 'Outfit', sans-serif; font-size: 2rem; font-weight: 400; color: #23221F; margin-bottom: 1.5rem; line-height: 1.3;">
        Please open this link on your mobile device
      </h1>
      <p style="font-family: 'Outfit', sans-serif; font-size: 1.1rem; color: #666; line-height: 1.6;">
        This page is designed to be viewed on a mobile device for the best experience.
      </p>
    </div>
  </div>
</Layout> 