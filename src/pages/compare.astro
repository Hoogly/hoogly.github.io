                    </div>
                    <button type="submit" class="btn btn-primary btn-large">Book Your Demo</button>
                </form>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        padding: var(--space-20) 0 var(--space-16) 0;
        background: linear-gradient(135deg, #F6F4FE 0%, #F5E9FA 100%);
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-16);
        align-items: center;
    }

    .hero-title {
        font-family: 'Outfit', sans-serif;
        font-size: 4rem;
        font-weight: 400;
        line-height: 1.1;
        margin-bottom: var(--space-6);
        color: var(--color-neutral-900);
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: var(--color-neutral-700);
        line-height: 1.6;
        margin-bottom: var(--space-8);
    }

    .hero-cta {
        display: flex;
        gap: var(--space-4);
        flex-wrap: wrap;
    }

    .hero-visual {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .visual-container {
        position: relative;
        width: 300px;
        height: 200px;
    }

    .messy-line {
        position: absolute;
        top: 50px;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
        border-radius: 2px;
        opacity: 0.7;
        animation: messyWave 3s ease-in-out infinite;
    }

    .clean-line {
        position: absolute;
        top: 100px;
        left: 0;
        width: 0%;
        height: 4px;
        background: #10b981;
        border-radius: 2px;
        animation: cleanGrow 2s ease-out 1s forwards;
    }

    .transformation-arrow {
        position: absolute;
        top: 75px;
        right: -20px;
        font-size: 2rem;
        color: var(--color-purple);
        animation: bounce 2s ease-in-out infinite;
    }

    @keyframes messyWave {
        0%, 100% { transform: translateY(0) scaleX(1); }
        50% { transform: translateY(-10px) scaleX(1.1); }
    }

    @keyframes cleanGrow {
        0% { width: 0%; }
        100% { width: 100%; }
    }

    @keyframes bounce {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(10px); }
    }

    /* Problem Section */
    .problem-section {
        padding: var(--space-20) 0;
        background: white;
    }

    .problem-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--space-8);
        margin-top: var(--space-12);
    }

    .problem-item {
        text-align: center;
        padding: var(--space-8);
        border-radius: var(--radius-xl);
        background: var(--color-neutral-50);
        transition: transform 0.2s ease;
    }

    .problem-item:hover {
        transform: translateY(-4px);
    }

    .problem-icon {
        font-size: 3rem;
        margin-bottom: var(--space-4);
    }

    .problem-item h3 {
        font-size: var(--font-size-xl);
        color: var(--color-neutral-900);
        margin-bottom: var(--space-3);
    }

    .problem-item p {
        color: var(--color-neutral-700);
        line-height: 1.6;
    }

    /* Solution Section */
    .solution-section {
        padding: var(--space-20) 0;
        background: var(--color-neutral-50);
    }

    .solution-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-8);
        margin-top: var(--space-12);
    }

    .solution-step {
        display: flex;
        gap: var(--space-6);
        align-items: flex-start;
    }

    .step-number {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--color-purple);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--font-size-xl);
        font-weight: bold;
        flex-shrink: 0;
    }

    .step-content h3 {
        font-size: var(--font-size-2xl);
        color: var(--color-neutral-900);
        margin-bottom: var(--space-3);
    }

    .step-content p {
        color: var(--color-neutral-700);
        line-height: 1.6;
    }

    /* Comparison Section */
    .comparison-section {
        padding: var(--space-20) 0;
        background: white;
    }

    .comparison-table {
        background: white;
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
        width: 100%;
        margin-top: var(--space-12);
    }

    .table-header {
        display: grid;
        grid-template-columns: 220px repeat(4, 1fr);
        background: var(--color-neutral-50);
        border-bottom: 1px solid var(--color-neutral-200);
    }

    .table-row {
        display: grid;
        grid-template-columns: 220px repeat(4, 1fr);
        border-bottom: 1px solid var(--color-neutral-100);
        align-items: center;
    }

    .table-row:last-child {
        border-bottom: none;
    }

    .feature-label {
        font-weight: 600;
        color: var(--color-neutral-800);
        padding: var(--space-6);
        border-right: 1px solid var(--color-neutral-100);
