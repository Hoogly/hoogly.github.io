    }

    .product-col {
        padding: var(--space-6);
        font-weight: 500;
        border-right: 1px solid var(--color-neutral-100);
        display: flex;
        align-items: center;
    }

    .product-col:last-child {
        border-right: none;
    }

    .hoogly-col {
        background: #FFF0F7;
        font-weight: 600;
        color: var(--color-neutral-900);
        position: relative;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    /* Features Section */
    .features-section {
        padding: var(--space-20) 0;
