              font-family: 'Grenette', 'Outfit', sans-serif;
              font-size: 6rem;
              font-weight: 600;
              line-height: 0.6;
              margin: 0 0 1rem 0;
              color: #f7f3f0;
              letter-spacing: -0.02em;
              white-space: nowrap;
