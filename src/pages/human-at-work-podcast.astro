    // Also handle astro page loads
    document.addEventListener('astro:page-load', function() {
      initializeAnimations();
      initializeMobileEmailFocus();
    });

    // Viewport animation system
    function initializeAnimations() {
      // Animate all elements with animate-in class when they enter viewport
      document.querySelectorAll('.animate-in').forEach((element) => {
        const observer = new window.IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                element.classList.add('visible');
                observer.disconnect();
              }
            });
          },
          { threshold: 0.3 }
        );
        observer.observe(element);
      });
    }

    // Mobile email input focus and zoom functionality
    function initializeMobileEmailFocus() {
      const emailInput = document.querySelector('.mobile-email-input input[type="email"]');
      if (!emailInput) return;

      // Detect if device is mobile
      function isMobile() {
        return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || 
               (window.innerWidth <= 920);
      }

      // Let the browser handle focus naturally - we'll enhance the focus event

      // Handle focus event for additional mobile optimizations
      emailInput.addEventListener('focus', function() {
        if (isMobile()) {
          // Add a class for mobile-specific styling during focus
          emailInput.closest('.mobile-email-input').classList.add('mobile-focused');
          
          // Smooth scroll to optimal position after keyboard appears
          setTimeout(() => {
            const inputRect = emailInput.getBoundingClientRect();
            const offset = window.innerHeight * 0.25; // Position input 25% from top to account for keyboard
            
            window.scrollTo({
              top: window.scrollY + inputRect.top - offset,
              behavior: 'smooth'
            });
          }, 300); // Wait a bit for keyboard to appear
        }
      });

      emailInput.addEventListener('blur', function() {
        if (isMobile()) {
          // Remove mobile focus class
          emailInput.closest('.mobile-email-input').classList.remove('mobile-focused');
        }
      });
    }
