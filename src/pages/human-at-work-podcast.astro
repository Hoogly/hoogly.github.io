          <div class="audio-bar" style="width: 29px; height: 293px; background: white; border-radius: 50px; animation-delay: 0.3s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 0.4s;"></div>
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 0.5s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 0.6s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 0.7s;"></div>
          <div class="audio-bar" style="width: 29px; height: 293px; background: white; border-radius: 50px; animation-delay: 0.8s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 0.9s;"></div>
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 1.0s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 1.1s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 1.2s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 1.3s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 1.4s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 1.5s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 1.6s;"></div>
          <div class="audio-bar" style="width: 29px; height: 293px; background: white; border-radius: 50px; animation-delay: 1.7s;"></div>
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 1.8s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 1.9s;"></div>
