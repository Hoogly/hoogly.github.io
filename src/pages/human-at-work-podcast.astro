  <main style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif; width: 100%; max-width: 100vw; position: relative; z-index: 1; margin-top: -80px;">
    <!-- Main Podcast Interface -->
    <div style="
      display: block;
      width: 100%;
      max-width: 100vw;
      margin: 0;
      padding: 0;
    ">
      <!-- Left Panel: Podcast Content -->
