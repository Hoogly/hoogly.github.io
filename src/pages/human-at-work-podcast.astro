---
import Header from '../components/Header.astro';
import Posthog from '../components/posthog.astro';
import '../styles/design-system.css';
import { ClientRouter } from "astro:transitions";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/images/Orange-cream.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>Human at Work Podcast - Hoogly</title>
    <meta name="title" content="Human at Work Podcast - Hoogly" />
    <meta name="description" content="Real conversations about workplace culture and what it means to be human in today's evolving professional landscape." />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content="Human at Work Podcast - Hoogly" />
    <meta property="og:description" content="Real conversations about workplace culture and what it means to be human in today's evolving professional landscape." />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content="Human at Work Podcast - Hoogly" />
    <meta property="twitter:description" content="Real conversations about workplace culture and what it means to be human in today's evolving professional landscape." />

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-TXHXQ8NW');</script>
    <!-- End Google Tag Manager -->
    <ClientRouter />

    <!-- Grenette Font Definitions -->
    <style>
      @font-face {
        font-family: 'Grenette';
        src: url('/Font/Grenette Regular Font.woff2') format('woff2'),
             url('/Font/Grenette Regular Font.ttf') format('truetype');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Grenette';
        src: url('/Font/Grenette Semibold Font.woff2') format('woff2'),
             url('/Font/Grenette Semibold Font.ttf') format('truetype');
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Grenette';
        src: url('/Font/Grenette Bold Font.woff2') format('woff2'),
             url('/Font/Grenette Bold Font.ttf') format('truetype');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }
    </style>
    
    <!-- Prevent page overflow -->
    <style>
      html, body {
        overflow-x: hidden;
        max-width: 100vw;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <Posthog />
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TXHXQ8NW"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <Header />
    <main style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif; width: 100%; max-width: 100vw; position: relative; z-index: 1; margin-top: -80px; overflow: hidden;">
      <!-- Main Podcast Interface -->
      <div style="
        display: block;
        width: 100%;
        max-width: 100vw;
        margin: 0;
        padding: 0;
        overflow: hidden;
      ">
        <!-- Left Panel: Podcast Content -->
        <div style="
          background: linear-gradient(rgba(255,255,255,1) 0%, rgba(255,255,255,0.9) 5%, rgba(255,255,255,0) 15%, rgba(0,0,0,0.4) 30%, rgba(0,0,0,0.8) 60%, rgba(0,0,0,0.9) 100%),
                      linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                      url('/images/Human at Work/Anitta Podcast.jpeg');
          background-size: cover;
          background-position: center 40%;
          background-repeat: no-repeat;
          image-rendering: auto;
          position: relative;
          display: flex;
          align-items: center;
          justify-content: center;
          padding: 10rem 2rem 2rem;
          box-sizing: border-box;
          min-height: 100vh;
        ">
          <!-- Audio Visualizer -->
          <div class="audio-visualizer-container" style="
            position: absolute;
            bottom: 25%;
            left: 0;
            width: 100%;
            height: 293px;
            display: flex;
            align-items: center;
            justify-content: space-evenly;
            gap: 29px;
            z-index: 0;
            opacity: 0.12;
            overflow: hidden;
          ">
            {Array.from({ length: 20 }).map((_, i) => (
              <div class="audio-bar" style={`width: 29px; height: ${[176, 205, 88, 293, 146][i % 5]}px; background: white; border-radius: 50px; animation-delay: ${i * 0.1}s;`}></div>
            ))}
          </div>

          <!-- Main Content -->
          <div style="
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-start;
            height: 100%;
            width: 100%;
            max-width: 1400px;
            margin: auto;
            padding: 0 var(--space-6);
            gap: 6rem;
          ">
            <!-- Left Column -->
            <div class="podcast-left" style="
              flex: 0 1 55%;
              max-width: 720px;
            ">
              <!-- Coming Soon Badge -->
              <div class="animate-in" style="
                background: transparent;
                border: 1px solid #ffffff;
                border-radius: 37px;
                padding: 0.5rem 1rem;
                font-size: 1rem;
                color: white;
                font-family: 'Grenette', 'Outfit', sans-serif;
                font-weight: 400;
                display: block;
                margin-bottom: 2rem;
                width: fit-content;
              ">
                Coming Soon
              </div>
              
              <!-- Large Title -->
              <h1 class="animate-in" style="
                font-family: 'Grenette', 'Outfit', sans-serif;
                font-size: 6rem;
                font-weight: 600;
                line-height: 0.6;
                margin: 0 0 1rem 0;
                color: #f7f3f0;
                letter-spacing: -0.02em;
                white-space: nowrap;
              ">
                Human at Work
              </h1>
              
              <!-- Host Info -->
              <p class="animate-in" style="
                font-family: 'Grenette', 'Outfit', sans-serif;
                font-size: 1.7rem;
                font-weight: 400;
                margin: 1rem 0 2rem 0;
                color: #f7f3f0;
              ">
                Hosted by Anitta Krishan
              </p>

              <!-- Description Headline -->
              <h2 class="animate-in" style="
                font-family: 'Grenette', 'Outfit', sans-serif;
                font-size: 24px;
                font-weight: 600;
                line-height: 1.3;
                color: #ffffff;
                margin: 0 0 1rem 0;
              ">
                A podcast that explores the heart of HR and the future of people at work.
              </h2>

              <!-- Description Body -->
              <p class="animate-in" style="
                font-family: 'Outfit', sans-serif;
                font-size: 18px;
                font-weight: 400;
                line-height: 1.5;
                color: #ffffff;
                margin: 0 0 2rem 0;
                opacity: 0.9;
              ">
                Each episode dives into real conversations with leaders, practitioners, and thinkers who are reimagining how organisations can build trust, connection, and wellbeing in the workplace. 
                <br><br> 
                From tackling burnout and employee engagement to shaping culture and navigating change, Human at Work offers practical insights and inspiring stories to help you create workplaces where people and performance thrive.
              </p>

              

              <!-- Podcast Platform Logos -->
              <div class="platform-logos animate-in" style="
                display: flex;
                gap: 1.5rem;
                align-items: center;
                margin-top: auto;
                padding-top: 4rem;
              ">
                <!-- Apple Podcasts -->
                <a href="#" style="
                  display: flex;
                  align-items: center;
                  text-decoration: none;
                  transition: transform 0.2s ease;
                ">
                  <img 
                    src="/images/Human at Work/apple podcast.png" 
                    alt="Apple Podcasts" 
                    style="
                      width: 30px;
                      height: 30px;
                      object-fit: contain;
                    "
                  />
                </a>
                
                <!-- Spotify -->
                <a href="#" style="
                  display: flex;
                  align-items: center;
                  text-decoration: none;
                  transition: transform 0.2s ease;
                ">
                  <img 
                    src="/images/Human at Work/Spotify.png" 
                    alt="Spotify" 
                    style="
                      width: 30px;
                      height: 30px;
                      object-fit: contain;
                    "
                  />
                </a>
              </div>
            </div>

            <!-- Right Column -->
            <div class="podcast-right" style="
              flex: 0 1 45%;
              min-width: 480px;
              padding-top: 4rem;
              display: flex;
              flex-direction: column;
              align-items: center;
            ">
              <!-- Form Container with Title -->
              <div class="pipedrive-form-container animate-in" style="
                width: 400px;
                max-width: 100%;
                position: relative;
                z-index: 10;
              ">
                <!-- Call to Action Text -->
                <p class="animate-in" style="
                  font-family: 'Grenette', 'Outfit', sans-serif;
                  font-size: 1.5rem;
                  line-height: 1.4;
                  color: #ffffff;
                  margin: 0 0 2rem 0;
                  font-weight: 600;
                  text-align: left;
                ">
                  Drop your email so you don't miss the first episode
                </p>

                <!-- Form Content -->
                <div style="
                  width: 100%;
                  position: relative;
                  overflow: visible;
                  min-height: 400px;
              ">
                <div class="pipedriveWebForms" data-pd-webforms="https://webforms.pipedrive.com/f/cB5aEDdu8KwfSTzIANrfWsvwV6eKFntNzul8SKbZOOLw3BHkcziKiXFGz3D5m5PzG3">
                  <script src="https://webforms.pipedrive.com/f/loader"></script>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <style>
        /* Responsive Layout - Make desktop layout mobile-friendly */
        @media (max-width: 1280px) {
          /* Adjust layout for smaller desktop/laptop screens */
          .podcast-left {
            flex: 0 1 50% !important;
          }
          
          .podcast-right {
            flex: 0 1 50% !important;
            min-width: 420px !important;
          }

          /* Slightly smaller title */
          h1 {
            font-size: 5rem !important;
          }
        }

        @media (max-width: 1024px) {
          /* Convert two-column layout to single column */
          main > div > div:first-child > div:first-child ~ div {
            flex-direction: column !important;
            align-items: flex-start !important;
            padding: 2rem 1.5rem !important;
            gap: 2rem !important;
          }

          .podcast-left {
            flex: none !important;
            max-width: 100% !important;
            width: 100% !important;
          }

          .podcast-right {
            flex: none !important;
            min-width: unset !important;
            width: 100% !important;
            max-width: 100% !important;
            padding: 2rem 1rem !important;
          }

          .pipedrive-form-container {
            width: 400px !important;
            max-width: calc(100vw - 3rem) !important;
            margin: 0 auto !important;
          }

          /* Adjust title size */
          h1 {
            font-size: 4rem !important;
          }

          /* Adjust host info */
          .podcast-left p:first-of-type {
            font-size: 1.3rem !important;
          }

          /* Adjust description */
          .podcast-left p:nth-of-type(2) {
            font-size: 16px !important;
          }

          /* Platform logos spacing */
          .platform-logos {
            padding-top: 2rem !important;
          }

          /* Form container sizing */
          .pipedrive-form-container {
            width: 100% !important;
            max-width: 600px !important;
            margin: 0 auto !important;
          }
        }

        @media (max-width: 768px) {
          /* Further adjustments for tablet */
          h1 {
            font-size: 3.5rem !important;
          }

          .podcast-left p:first-of-type {
            font-size: 1.2rem !important;
          }

          .podcast-left p:nth-of-type(2) {
            font-size: 15px !important;
          }

          .pipedrive-form-container {
            max-width: 500px !important;
          }

          main > div > div:first-child > div:first-child ~ div {
            padding: 2rem 1rem !important;
          }
        }

        @media (max-width: 480px) {
          /* Mobile adjustments */
          h1 {
            font-size: 2.5rem !important;
          }

          .podcast-left p:first-of-type {
            font-size: 1rem !important;
          }

          .podcast-left p:nth-of-type(2) {
            font-size: 14px !important;
          }

          .pipedrive-form-container {
            max-width: 100% !important;
          }

          main > div > div:first-child > div:first-child ~ div {
            padding: 1.5rem 0.75rem !important;
          }
        }

        /* Animate-in Effect */
        .animate-in {
          opacity: 0;
          transform: translateY(40px);
          transition:
            opacity 1.2s cubic-bezier(0.77, 0, 0.175, 1),
            transform 1.2s cubic-bezier(0.77, 0, 0.175, 1);
        }
        .animate-in.visible {
          opacity: 1;
          transform: translateY(0);
        }
        
        /* Audio Visualizer Animation */
        .audio-bar {
          animation: audioWave 2s ease-in-out infinite;
          transform-origin: bottom;
          width: 29px !important;
          background: white !important;
          border-radius: 50px !important;
        }

        /* Make audio bars much thicker on mobile to match desktop visual appearance */
        @media (max-width: 1024px) {
          .audio-bar {
            width: 55px !important;
            background: white !important;
            border-radius: 50px !important;
            animation: audioWave 2s ease-in-out infinite !important;
            transform-origin: bottom !important;
          }
          
          /* Adjust the container gap for much thicker bars */
          .audio-visualizer-container {
            gap: 20px !important;
          }
        }
        
        @keyframes audioWave {
          0%, 100% {
            transform: scaleY(1);
            opacity: 0.3;
          }
          25% {
            transform: scaleY(0.6);
            opacity: 0.8;
          }
          50% {
            transform: scaleY(1.4);
            opacity: 1;
          }
          75% {
            transform: scaleY(0.8);
            opacity: 0.6;
          }
        }
      </style>
    </main>

    <script>
      // Initialize viewport animations
      document.addEventListener('DOMContentLoaded', function() {
        initializeAnimations();
      });

      // Also handle astro page loads
      document.addEventListener('astro:page-load', function() {
        initializeAnimations();
      });

      // Viewport animation system
      function initializeAnimations() {
        // Animate all elements with animate-in class when they enter viewport
        document.querySelectorAll('.animate-in').forEach((element) => {
          const observer = new window.IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  element.classList.add('visible');
                  observer.disconnect();
                }
              });
            },
            { threshold: 0.3 }
          );
          observer.observe(element);
        });
      }
    </script>
  </body>
</html>