    </div>

    <style>
      /* Responsive Layout - Make desktop layout mobile-friendly */
      @media (max-width: 1024px) {
        /* Convert two-column layout to single column on mobile */
        main > div > div:first-child > div:first-child ~ div {
          flex-direction: column !important;
          align-items: flex-start !important;
          text-align: left !important;
          padding: 2rem 1.5rem !important;
          gap: 1rem !important;
        }

        /* Left side content on mobile - stack vertically, left-aligned */
        main > div > div:first-child > div:nth-child(2) {
          max-width: none !important;
          width: 100% !important;
          text-align: left !important;
          align-items: flex-start !important;
        }

        /* Right side content on mobile - left-aligned below left content */
        main > div > div:first-child > div:nth-child(3) {
          margin-left: 0 !important;
          flex: none !important;
          width: 100% !important;
          max-width: 100% !important;
          text-align: left !important;
          align-items: flex-start !important;
        }

        /* Adjust title size for mobile */
        main > div > div:first-child > div:nth-child(2) h1 {
          font-size: 4rem !important;
          text-align: left !important;
        }

        /* Adjust host info for mobile */
        main > div > div:first-child > div:nth-child(2) p:first-of-type {
          font-size: 1.3rem !important;
          text-align: left !important;
        }

        /* Adjust description for mobile */
        main > div > div:first-child > div:nth-child(2) p:nth-of-type(2) {
          font-size: 16px !important;
          text-align: left !important;
          max-width: 100% !important;
        }

        /* Left-align podcast logos on mobile */
        main > div > div:first-child > div:nth-child(2) > div:last-child {
          justify-content: flex-start !important;
        }

        /* Pipedrive form container responsive styling */
        .pipedrive-form-container {
          width: 420px !important;
          max-width: 95% !important;
          margin: 0 0 2rem 0 !important;
        }

        /* Ensure Pipedrive iframe is responsive */
        .pipedriveWebForms {
          position: relative !important;
          z-index: 1 !important;
        }

        .pipedriveWebForms iframe {
          max-width: 100% !important;
          width: 100% !important;
        }
      }

      @media (max-width: 768px) {
        /* Smaller title on smaller screens */
        main > div > div:first-child > div:nth-child(2) h1 {
          font-size: 3rem !important;
        }

        /* Smaller host info on smaller screens */
        main > div > div:first-child > div:nth-child(2) p:first-of-type {
          font-size: 1.1rem !important;
        }

        /* Smaller description on smaller screens */
        main > div > div:first-child > div:nth-child(2) p:nth-of-type(2) {
          font-size: 14px !important;
        }

        /* Adjust Pipedrive form container for tablet */
        .pipedrive-form-container {
          width: 350px !important;
          max-width: 90% !important;
        }

        /* Reduce padding on smaller screens */
        main > div > div:first-child > div:first-child ~ div {
          padding: 1.5rem 1rem !important;
        }
      }

      @media (max-width: 480px) {
        /* Even smaller title on very small screens */
        main > div > div:first-child > div:nth-child(2) h1 {
          font-size: 2.5rem !important;
        }

        /* Smaller host info on very small screens */
        main > div > div:first-child > div:nth-child(2) p:first-of-type {
          font-size: 1rem !important;
        }

        /* Smaller description on very small screens */
        main > div > div:first-child > div:nth-child(2) p:nth-of-type(2) {
          font-size: 13px !important;
        }

        /* Adjust Pipedrive form container for mobile */
        .pipedrive-form-container {
          max-width: 280px !important;
        }

        /* Further reduce padding on very small screens */
        main > div > div:first-child > div:first-child ~ div {
          padding: 1rem 0.75rem !important;
        }
      }

      /* Animate-in Effect */
      .animate-in {
        opacity: 0;
        transform: translateY(40px);
        transition:
          opacity 1.2s cubic-bezier(0.77, 0, 0.175, 1),
          transform 1.2s cubic-bezier(0.77, 0, 0.175, 1);
      }
      .animate-in.visible {
        opacity: 1;
        transform: translateY(0);
      }
      
      /* Audio Visualizer Animation */
      .audio-bar {
        animation: audioWave 2s ease-in-out infinite;
        transform-origin: bottom;
        width: 29px !important;
        background: white !important;
        border-radius: 50px !important;
      }

      /* Make audio bars much thicker on mobile to match desktop visual appearance */
      @media (max-width: 1024px) {
        .audio-bar {
          width: 55px !important;
          background: white !important;
          border-radius: 50px !important;
          animation: audioWave 2s ease-in-out infinite !important;
          transform-origin: bottom !important;
        }
        
        /* Adjust the container gap for much thicker bars */
        .audio-visualizer-container {
          gap: 20px !important;
        }
      }
      
      @keyframes audioWave {
        0%, 100% {
          transform: scaleY(1);
          opacity: 0.3;
        }
        25% {
          transform: scaleY(0.6);
          opacity: 0.8;
        }
        50% {
          transform: scaleY(1.4);
          opacity: 1;
        }
        75% {
          transform: scaleY(0.8);
          opacity: 0.6;
        }
      }
    </style>

  </main>

  <script>
    // Initialize viewport animations
    document.addEventListener('DOMContentLoaded', function() {
      initializeAnimations();
    });

    // Also handle astro page loads
    document.addEventListener('astro:page-load', function() {
      initializeAnimations();
    });



    // Viewport animation system
    function initializeAnimations() {
      // Animate all elements with animate-in class when they enter viewport
      document.querySelectorAll('.animate-in').forEach((element) => {
        const observer = new window.IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                element.classList.add('visible');
                observer.disconnect();
              }
            });
          },
          { threshold: 0.3 }
        );
        observer.observe(element);
      });
    }
  </script>
  </body>
</html>