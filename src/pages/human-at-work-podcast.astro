    <Header />
  <main style="background: #f7f3f0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif; height: 100vh; width: 100%; max-width: 100vw; overflow: hidden; position: absolute; top: 0; left: 0; z-index: 1;">
    <!-- Main Podcast Interface -->
    <div style="
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;
      height: 100vh;
      width: 100%;
      max-width: 100vw;
      margin: 0;
      padding: 0;
      overflow: hidden;
    ">
      <!-- Left Panel: Podcast Content -->
      <div style="
        background: linear-gradient(rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.8) 60%, rgba(0,0,0,0.9) 100%), 
                    url('/images/Human at Work/Anitta podcast.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        image-rendering: auto;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        box-sizing: border-box;
        overflow: hidden;
      ">
        <!-- Audio Visualizer -->
        <div style="
          position: absolute;
          bottom: 25%;
          left: -50px;
          width: calc(100% + 100px);
          height: 293px;
          display: flex;
          align-items: center;
          justify-content: space-evenly;
          gap: 29px;
          z-index: 0;
          opacity: 0.12;
        ">
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 0s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 0.1s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 0.2s;"></div>
          <div class="audio-bar" style="width: 29px; height: 293px; background: white; border-radius: 50px; animation-delay: 0.3s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 0.4s;"></div>
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 0.5s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 0.6s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 0.7s;"></div>
          <div class="audio-bar" style="width: 29px; height: 293px; background: white; border-radius: 50px; animation-delay: 0.8s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 0.9s;"></div>
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 1.0s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 1.1s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 1.2s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 1.3s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 1.4s;"></div>
          <div class="audio-bar" style="width: 29px; height: 88px; background: white; border-radius: 50px; animation-delay: 1.5s;"></div>
          <div class="audio-bar" style="width: 29px; height: 205px; background: white; border-radius: 50px; animation-delay: 1.6s;"></div>
          <div class="audio-bar" style="width: 29px; height: 293px; background: white; border-radius: 50px; animation-delay: 1.7s;"></div>
          <div class="audio-bar" style="width: 29px; height: 176px; background: white; border-radius: 50px; animation-delay: 1.8s;"></div>
          <div class="audio-bar" style="width: 29px; height: 146px; background: white; border-radius: 50px; animation-delay: 1.9s;"></div>
        </div>

        <!-- Main Content -->
        <div style="
          position: relative;
          z-index: 2;
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
          height: 100%;
          width: 100%;
          max-width: 1400px;
          margin: auto;
          padding: 0 4rem;
        ">
          <!-- Left Side Content -->
          <div style="
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            text-align: left;
            max-width: 600px;
          ">
            <!-- Coming Soon Badge -->
            <div class="animate-in" style="
              background: transparent;
              border: 1px solid #ffffff;
              border-radius: 37px;
              padding: 0.5rem 1rem;
              font-size: 1rem;
              color: white;
              font-family: 'Grenette', 'Outfit', sans-serif;
              font-weight: 400;
              display: block;
              margin-bottom: 2rem;
              width: fit-content;
            ">
              Coming Soon
            </div>
            
            <!-- Large Title -->
            <h1 class="animate-in" style="
              font-family: 'Grenette', 'Outfit', sans-serif;
              font-size: 6rem;
              font-weight: 600;
              line-height: 0.6;
              margin: 0 0 1rem 0;
              color: #f7f3f0;
              letter-spacing: -0.02em;
              white-space: nowrap;
            ">
              Human at Work
            </h1>
            
            <!-- Host Info -->
            <p class="animate-in" style="
              font-family: 'Grenette', 'Outfit', sans-serif;
              font-size: 1.7rem;
              font-weight: 400;
              margin: 1rem 0 2rem 0;
              color: #f7f3f0;
            ">
              Hosted by Anitta Krishan
            </p>

            <!-- Description -->
            <p class="animate-in" style="
              font-family: 'Source Sans Pro', sans-serif;
              font-size: 18px;
              font-weight: 400;
              line-height: 1.33;
              color: #ffffff;
              margin: 0 0 2rem 0;
            ">
              Human at Work is a podcast that explores the heart of HR and the future of people at work. Each episode dives into real conversations with leaders, practitioners, and thinkers who are reimagining how organisations can build trust, connection, and wellbeing in the workplace. From tackling burnout and employee engagement to shaping culture and navigating change, Human at Work offers practical insights and inspiring stories to help you create workplaces where people and performance thrive.
            </p>

            <!-- Podcast Platform Logos -->
            <div class="animate-in" style="
              display: flex;
              gap: 1.5rem;
              align-items: center;
              margin-top: 1rem;
            ">
              <!-- Apple Podcasts -->
              <a href="#" style="
                display: flex;
                align-items: center;
                text-decoration: none;
                transition: transform 0.2s ease;
              ">
                <img 
                  src="/images/Human at Work/apple podcast.png" 
                  alt="Apple Podcasts" 
                  style="
                    width: 30px;
                    height: 30px;
                    object-fit: contain;
                  "
                />
              </a>
              
              <!-- Spotify -->
              <a href="#" style="
                display: flex;
                align-items: center;
                text-decoration: none;
                transition: transform 0.2s ease;
              ">
                <img 
                  src="/images/Human at Work/Spotify.png" 
                  alt="Spotify" 
                  style="
                    width: 30px;
                    height: 30px;
                    object-fit: contain;
                  "
                />
              </a>
            </div>
          </div>

          <!-- Right Side Email Section -->
          <div style="
            flex: 0 0 400px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            text-align: left;
            margin-left: 4rem;
          ">
            <!-- Call to Action Text -->
            <p class="animate-in" style="
              font-family: 'Source Sans Pro', sans-serif;
              font-size: 1.5rem;
              line-height: 1.4;
              color: #ffffff;
              margin: 0 0 1rem 0;
              font-weight: 400;
              text-align: left;
            ">
              Drop your email so you don't miss the first episode
            </p>

            <!-- Email Input -->
            <div class="mobile-email-input animate-in" style="
              display: flex !important;
              background: rgba(255, 255, 255, 0.1);
              border-radius: 50px;
              padding: 4px;
              align-items: center;
              backdrop-filter: blur(10px);
              border: 1px solid rgba(255, 255, 255, 0.2);
              width: 400px;
              max-width: 100%;
              opacity: 1 !important;
              visibility: visible !important;
              position: relative !important;
              z-index: 10 !important;
            ">
              <input 
                type="email" 
                placeholder="What's your email?"
                style="
                  flex: 1;
                  border: none;
                  outline: none;
                  padding: 1rem 1.5rem;
                  font-size: 1rem;
                  font-family: 'Grenette', 'Outfit', sans-serif;
                  font-weight: 400;
                  color: white;
                  background: transparent;
                  border-radius: 50px;
                "
              />
              <button style="
                background: rgba(255, 255, 255, 0.2);
                border: none;
                border-radius: 50px;
                width: 48px;
                height: 48px;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                transition: all 0.2s ease;
              ">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>
      /* Responsive Layout - Make desktop layout mobile-friendly */
      @media (max-width: 1024px) {
        /* Convert two-column layout to single column on mobile */
        main > div > div:first-child > div:first-child ~ div {
          flex-direction: column !important;
          align-items: flex-start !important;
          text-align: left !important;
          padding: 2rem 1.5rem !important;
          gap: 1rem !important;
        }

        /* Left side content on mobile - stack vertically, left-aligned */
        main > div > div:first-child > div:nth-child(2) {
          max-width: none !important;
          width: 100% !important;
          text-align: left !important;
          align-items: flex-start !important;
        }

        /* Right side content on mobile - left-aligned below left content */
        main > div > div:first-child > div:nth-child(3) {
          margin-left: 0 !important;
          flex: none !important;
          width: 100% !important;
          max-width: 100% !important;
          text-align: left !important;
          align-items: flex-start !important;
        }

        /* Adjust title size for mobile */
        main > div > div:first-child > div:nth-child(2) h1 {
          font-size: 4rem !important;
          text-align: left !important;
        }

        /* Adjust host info for mobile */
        main > div > div:first-child > div:nth-child(2) p:first-of-type {
          font-size: 1.3rem !important;
          text-align: left !important;
        }

        /* Adjust description for mobile */
        main > div > div:first-child > div:nth-child(2) p:nth-of-type(2) {
          font-size: 16px !important;
          text-align: left !important;
          max-width: 100% !important;
        }

        /* Left-align podcast logos on mobile */
        main > div > div:first-child > div:nth-child(2) > div:last-child {
          justify-content: flex-start !important;
        }

        /* Left-align email section on mobile */
        main > div > div:first-child > div:nth-child(3) p {
          text-align: left !important;
        }

        /* Adjust email input for mobile */
        main > div > div:first-child > div:nth-child(3) .mobile-email-input {
          width: 350px !important;
          max-width: 100% !important;
          margin: 0 !important;
          align-self: flex-start !important;
        }
      }

      @media (max-width: 768px) {
        /* Smaller title on smaller screens */
        main > div > div:first-child > div:nth-child(2) h1 {
          font-size: 3rem !important;
        }

        /* Smaller host info on smaller screens */
        main > div > div:first-child > div:nth-child(2) p:first-of-type {
          font-size: 1.1rem !important;
        }

        /* Smaller description on smaller screens */
        main > div > div:first-child > div:nth-child(2) p:nth-of-type(2) {
          font-size: 14px !important;
        }

        /* Smaller email input on smaller screens */
        main > div > div:first-child > div:nth-child(3) .mobile-email-input {
          max-width: 300px !important;
        }

        /* Reduce padding on smaller screens */
        main > div > div:first-child > div:first-child ~ div {
          padding: 1.5rem 1rem !important;
        }
      }

      @media (max-width: 480px) {
        /* Even smaller title on very small screens */
        main > div > div:first-child > div:nth-child(2) h1 {
          font-size: 2.5rem !important;
        }

        /* Smaller host info on very small screens */
        main > div > div:first-child > div:nth-child(2) p:first-of-type {
          font-size: 1rem !important;
        }

        /* Smaller description on very small screens */
        main > div > div:first-child > div:nth-child(2) p:nth-of-type(2) {
          font-size: 13px !important;
        }

        /* Smaller email input on very small screens */
        main > div > div:first-child > div:nth-child(3) .mobile-email-input {
          max-width: 280px !important;
        }

        /* Further reduce padding on very small screens */
        main > div > div:first-child > div:first-child ~ div {
          padding: 1rem 0.75rem !important;
        }
      }

      /* Animate-in Effect */
      .animate-in {
        opacity: 0;
        transform: translateY(40px);
        transition:
          opacity 1.2s cubic-bezier(0.77, 0, 0.175, 1),
          transform 1.2s cubic-bezier(0.77, 0, 0.175, 1);
      }
      .animate-in.visible {
        opacity: 1;
        transform: translateY(0);
      }
      
      /* Audio Visualizer Animation */
      .audio-bar {
        animation: audioWave 2s ease-in-out infinite;
        transform-origin: bottom;
      }
      
      @keyframes audioWave {
        0%, 100% {
          transform: scaleY(1);
          opacity: 0.3;
        }
        25% {
          transform: scaleY(0.6);
          opacity: 0.8;
        }
        50% {
          transform: scaleY(1.4);
          opacity: 1;
        }
        75% {
          transform: scaleY(0.8);
          opacity: 0.6;
        }
      }
    </style>

  </main>

  <script>
    // Initialize viewport animations
    document.addEventListener('DOMContentLoaded', function() {
      initializeAnimations();
    });

    // Also handle astro page loads
    document.addEventListener('astro:page-load', function() {
      initializeAnimations();
    });

    // Viewport animation system
    function initializeAnimations() {
      // Animate all elements with animate-in class when they enter viewport
      document.querySelectorAll('.animate-in').forEach((element) => {
        const observer = new window.IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                element.classList.add('visible');
                observer.disconnect();
              }
            });
          },
          { threshold: 0.3 }
        );
        observer.observe(element);
      });
    }
  </script>
  </body>
</html>