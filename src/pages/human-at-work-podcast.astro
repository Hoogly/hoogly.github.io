  <script>
    // Initialize viewport animations
    document.addEventListener('DOMContentLoaded', function() {
      initializeAnimations();
      forceHeaderWhite();
    });

    // Also handle astro page loads
    document.addEventListener('astro:page-load', function() {
      initializeAnimations();
      forceHeaderWhite();
    });

    // Force all header elements to be white
    function forceHeaderWhite() {
      // Force all text in header to be white (except Start Free button)
      const headerElements = document.querySelectorAll('.header *, .navbar *, .nav-links *, .nav-link');
      headerElements.forEach(el => {
        if (!el.classList.contains('btn-accent') && !el.closest('.btn-accent')) {
          el.style.setProperty('color', 'white', 'important');
        }
      });

      // Force all images in header to be inverted (white)
      const headerImages = document.querySelectorAll('.header img, .navbar img, .logo img');
      headerImages.forEach(img => {
        img.style.setProperty('filter', 'brightness(0) saturate(100%) invert(100%)', 'important');
      });

      // Force all SVGs in header to be white (except LinkedIn)
      const headerSVGs = document.querySelectorAll('.header svg, .navbar svg, .header svg *, .navbar svg *');
      headerSVGs.forEach(svg => {
        // Skip LinkedIn SVGs - let them keep their original color
        if (!svg.closest('a[aria-label*="LinkedIn"]')) {
          svg.style.setProperty('fill', 'white', 'important');
          svg.style.setProperty('stroke', 'none', 'important');
        }
      });

      // Make LinkedIn icon white
      const linkedInSVGs = document.querySelectorAll('.header a[aria-label*="LinkedIn"] svg');
      linkedInSVGs.forEach(svg => {
        svg.style.setProperty('fill', 'none', 'important');
        svg.style.setProperty('opacity', '0.8', 'important');
        svg.style.setProperty('display', 'block', 'important');
        svg.style.setProperty('width', '20px', 'important');
        svg.style.setProperty('height', '20px', 'important');
      });

      // Set LinkedIn path to white
      const linkedInPaths = document.querySelectorAll('.header a[aria-label*="LinkedIn"] svg path');
      linkedInPaths.forEach(path => {
        path.style.setProperty('fill', 'white', 'important');
      });

      // Set LinkedIn rect to no fill
      const linkedInRects = document.querySelectorAll('.header a[aria-label*="LinkedIn"] svg rect');
      linkedInRects.forEach(rect => {
        rect.style.setProperty('fill', 'none', 'important');
      });

      // Specific targeting for nav links
      const navLinks = document.querySelectorAll('a[href="/how-it-works"], a[href="/pricing"], a[href="/blog"], a[href="/about"]');
      navLinks.forEach(link => {
        link.style.setProperty('color', 'white', 'important');
      });

      // Ensure Start Free button keeps its original colors
      const startFreeBtn = document.querySelector('.btn-accent');
      if (startFreeBtn) {
        startFreeBtn.style.setProperty('color', '#23221f', 'important');
        startFreeBtn.style.setProperty('background-color', '#FF7D61', 'important');
      }
    }

    // Viewport animation system
    function initializeAnimations() {
      // Animate all elements with animate-in class when they enter viewport
      document.querySelectorAll('.animate-in').forEach((element) => {
        const observer = new window.IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                element.classList.add('visible');
                observer.disconnect();
              }
            });
          },
          { threshold: 0.3 }
        );
        observer.observe(element);
      });
    }
  </script>
