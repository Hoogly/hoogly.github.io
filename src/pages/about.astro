<style>
  body {
    background: #FAF6F4 !important;
    font-family: 'Outfit', sans-serif;
  }
  
  .page-container {
    display: flex;
    min-height: 100vh;
  }
  
  /* Left Sidebar Navigation */
  .sidebar {
    width: 200px;
    background: transparent;
    padding: 2rem 1rem;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
    top: 30%;
    transform: translateY(-50%);
  }
  
  .nav-item {
    display: block;
    padding: 0.75rem 1rem;
    margin-bottom: 0.5rem;
    color: #666;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .nav-item:hover {
    background: #f0f0f0;
    color: #333;
  }
  
  .nav-item.active {
    background: #23221F;
    color: white;
  }
  
  /* Main Content Area */
  .main-content {
    flex: 1;
    margin-left: 200px;
    padding: 0;
  }
  
  .section {
    min-height: 80vh;
    padding: 2rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
  }
  
  .section-content {
    max-width: 800px;
  }
  
  .section-label {
    color: #999;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 400;
    color: #23221F;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  
  .section-text {
    font-size: 1.1rem;
    color: #444;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  .section-text:last-child {
    margin-bottom: 0;
  }
  
  /* Timeline Section */
  .timeline-container {
    display: flex;
    gap: 2rem;
    margin-top: 3rem;
  }
  
  .timeline-card {
    background: transparent;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    padding: 2rem;
    flex: 1;
    text-align: center;
  }
  
  .timeline-card.dark {
    background: transparent;
    color: #23221F;
    border: 1px solid #e0e0e0;
  }
  
  .timeline-year {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .timeline-label {
    font-size: 0.9rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }
  
  .timeline-card.dark .timeline-label {
    color: #666;
  }
  
  .timeline-milestones {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .milestone {
    text-align: left;
  }
  
  .milestone-year {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .milestone-stage {
    font-size: 0.8rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }
  
  .milestone-dots {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }
  
  .dot {
    width: 4px;
    height: 4px;
    background: #666;
    border-radius: 50%;
  }
  
  .milestone-amount {
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  /* Team Section */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
    margin-top: 3rem;
  }
  
  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }
  
  .team-card {
    text-align: center;
    padding: 0;
    border-radius: 0;
    box-shadow: none;
    background: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: 'Outfit', sans-serif;
    position: relative;
    margin-bottom: 3rem;
  }
  
  .team-img-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .team-img {
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 50%;
    border: 1.5px solid #23221F;
    background: #fff;
    box-shadow: none;
    z-index: 1;
  }
  
  .role-badge {
    position: absolute;
    left: 50%;
    bottom: -16px;
    transform: translateX(-50%);
    background: #F7F3F0;
    border: 1.5px solid #23221F;
    border-radius: 1000px;
    font-size: 1rem;
    font-weight: 500;
    padding: 2px 16px;
    box-shadow: 0 1px 4px 0 rgba(0,0,0,0.04);
    z-index: 2;
    color: #444;
    letter-spacing: 0.01em;
    display: flex;
    align-items: center;
    min-width: 60px;
    justify-content: center;
    white-space: nowrap;
  }
  
  .team-name {
    font-weight: 600;
    font-size: 1.25rem;
    margin-top: 2.2rem;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
  }
  
  .team-linkedin {
    display: inline-flex;
    align-items: center;
    opacity: 0.7;
    margin-left: 0.2rem;
  }
  
  .team-bio {
    color: #444;
    font-size: 1rem;
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: max-height 0.3s;
    max-height: 4.5em;
  }
  
  .see-more-btn {
    background: none;
    border: none;
    color: #23221F;
    font-weight: 600;
    cursor: pointer;
    margin-top: 0.5rem;
    font-size: 1rem;
    padding: 0;
    transition: color 0.2s;
  }
  
  .see-more-btn:hover {
    color: #23221F;
  }
  
  .see-more-btn:active,
  .see-more-btn:focus {
    color: #23221F !important;
    background: none !important;
    outline: none !important;
    box-shadow: none !important;
  }
  
  .flip-container {
    perspective: 800px;
    width: 180px;
    height: 180px;
  }
  
  .flipper {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.77,0,0.175,1);
    transform-style: preserve-3d;
  }
  
  .flip-container:hover .flipper, .flip-container:focus-within .flipper {
    transform: rotateY(180deg);
  }
  
  .flip-container.flipped .flipper {
    transform: rotateY(180deg);
  }
  
  .team-img.front {
    backface-visibility: hidden;
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    z-index: 2;
  }
  
  .team-img.back {
    backface-visibility: hidden;
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transform: rotateY(180deg);
    z-index: 1;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .page-container {
      flex-direction: column;
    }
    
    .sidebar {
      display: none;
    }
    
    .main-content {
      margin-left: 0;
    }
    
    .section {
      padding: 3rem 1.5rem;
      min-height: auto;
    }
    
    .timeline-container {
      flex-direction: column;
    }
    
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* Smooth Scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Scroll Animation Styles */
  .section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .section.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .team-card {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  
  .team-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Stagger animation for team cards */
  .team-card:nth-child(1) { transition-delay: 0.1s; }
  .team-card:nth-child(2) { transition-delay: 0.2s; }
  .team-card:nth-child(3) { transition-delay: 0.3s; }
  .team-card:nth-child(4) { transition-delay: 0.4s; }
  .team-card:nth-child(5) { transition-delay: 0.5s; }
  .team-card:nth-child(6) { transition-delay: 0.6s; }
  .team-card:nth-child(7) { transition-delay: 0.7s; }
  .team-card:nth-child(8) { transition-delay: 0.8s; }
  .team-card:nth-child(9) { transition-delay: 0.9s; }
  .team-card:nth-child(10) { transition-delay: 1.0s; }
  .team-card:nth-child(11) { transition-delay: 1.1s; }
  .team-card:nth-child(12) { transition-delay: 1.2s; }
  

  

</style>

