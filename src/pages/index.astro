		// Testimonial center-triggered word animation
		function initializeTestimonialAnimation() {
			const testimonialSection = document.querySelector('.testimonial-section');
			const testimonialContent = document.getElementById('testimonial-content');
			const testimonialQuote = document.getElementById('testimonial-quote');
			const testimonialAuthor = document.getElementById('testimonial-author');
			
			if (!testimonialSection || !testimonialContent || !testimonialQuote || !testimonialAuthor) return;
			
			// Initial animation when testimonial comes into view
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						// Animate the main container
						testimonialContent.style.opacity = '1';
						testimonialContent.style.transform = 'translateY(0)';
						
						// Animate the author
						setTimeout(() => {
							testimonialAuthor.style.opacity = '1';
							testimonialAuthor.style.transform = 'translateY(0)';
						}, 400);
					}
				});
			}, {
				threshold: 0.3,
				rootMargin: '0px 0px -50px 0px'
			});
			
			observer.observe(testimonialSection);
			
			// Viewport-triggered word-by-word animation
			let animationTriggered = false;
			
			function handleWordAnimation() {
				if (!testimonialSection) return;
				const rect = (testimonialSection as HTMLElement).getBoundingClientRect();
				const viewportHeight = window.innerHeight;
				
				// Check if testimonial is entering the viewport
				const isInViewport = rect.top < viewportHeight && rect.bottom > 0;
				
				if (isInViewport && !animationTriggered) {
					animationTriggered = true;
					console.log('Testimonial entering viewport - starting word animation');
					
					// Start word animation sequence
					const words = document.querySelectorAll('.word');
					const totalWords = words.length;
					const animationDuration = 3000; // 3 seconds total for more words
					const wordDelay = animationDuration / totalWords; // Time between each word
					
					words.forEach((word, index) => {
						setTimeout(() => {
							(word as HTMLElement).style.opacity = '1';
							console.log(`Animating word ${index + 1}/${totalWords}`);
						}, index * wordDelay);
					});
					
					// Remove scroll listener after animation starts
					window.removeEventListener('scroll', handleWordAnimation);
				}
			}
			
			// Add scroll listener for viewport-triggered animation
			window.addEventListener('scroll', handleWordAnimation, { passive: true });
		}
		
		// Initialize testimonial animation
		initializeTestimonialAnimation();
		
