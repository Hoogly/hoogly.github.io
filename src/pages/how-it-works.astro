    }

    .action-card {
      background: white;
      border-radius: 15px;
      padding: 15px;
      margin-top: 15px;
    }

    .action-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 8px 0;
      border-bottom: 1px solid #F0F0F0;
    }

    .action-item:last-child {
      border-bottom: none;
    }

    .action-left {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .action-icon {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
    }

    .action-icon.yellow { background: #FFD700; }
    .action-icon.purple { background: #9370DB; }
    .action-icon.green { background: #32CD32; }

