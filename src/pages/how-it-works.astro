  <script>
    let currentStep = 1;
    let autoRotateInterval;

    function toggleStep(stepNumber: number, isAutoRotation = false) {
      const stepItems = document.querySelectorAll('.step-item');
      
      // Close all steps and stop their progress bars
      stepItems.forEach((item, index) => {
        const stepNum = index + 1;
        item.classList.remove('active');
        stopProgressBar(stepNum);
      });
      
      // Open the clicked step
      const clickedStep = document.querySelector(`[data-step="${stepNumber}"]`);
      if (clickedStep) {
        clickedStep.classList.add('active');
        currentStep = stepNumber;
        
        // Animate the progress bar for the active step
        animateProgressBar(stepNumber);
        
        // Stop auto-rotation only when user manually selects a step (not during auto-rotation)
        if (!isAutoRotation && autoRotateInterval) {
          clearInterval(autoRotateInterval);
          autoRotateInterval = null;
        }
      }
    }

    function switchView(view: string) {
      const hrBtn = document.getElementById('hrBtn');
      const employeeBtn = document.getElementById('employeeBtn');
      
      if (view === 'hr') {
        hrBtn.classList.add('active');
        employeeBtn.classList.remove('active');
        updateContent('hr');
      } else {
        employeeBtn.classList.add('active');
        hrBtn.classList.remove('active');
        updateContent('employee');
      }
    }

    function updateContent(view: string) {
      const stepTitles = document.querySelectorAll('.step-title');
      const stepDescriptions = document.querySelectorAll('.step-description');
      const stepsContainer = document.querySelector('.steps-container');
      
      // Update CSS class for showing/hiding steps
      if (view === 'hr') {
        stepsContainer.classList.add('hr-view');
      } else {
        stepsContainer.classList.remove('hr-view');
      }
      
      stepTitles.forEach((title, index) => {
        const hrText = title.getAttribute('data-hr');
        const employeeText = title.getAttribute('data-employee');
        
        if (view === 'hr' && hrText) {
          title.textContent = hrText;
        } else if (view === 'employee' && employeeText) {
          title.textContent = employeeText;
        }
      });
      
      stepDescriptions.forEach((description, index) => {
        const hrText = description.getAttribute('data-hr');
        const employeeText = description.getAttribute('data-employee');
        
        if (view === 'hr' && hrText) {
          description.textContent = hrText;
        } else if (view === 'employee' && employeeText) {
          description.textContent = employeeText;
        }
      });
      
      // Re-attach click event listeners to step headers
      const stepHeaders = document.querySelectorAll('.step-header');
      stepHeaders.forEach((header, index) => {
        // Remove any existing listeners to prevent duplicates
        header.removeEventListener('click', header.clickHandler);
        
        // Create and store the click handler
        header.clickHandler = function(e) {
          e.preventDefault();
          const stepNumber = index + 1;
          toggleStep(stepNumber, false); // Pass false to indicate this is manual click
        };
        
        // Add the new listener
        header.addEventListener('click', header.clickHandler);
      });
      
      // Reset to first step and restart auto-rotation
      currentStep = 1;
      if (autoRotateInterval) {
        clearInterval(autoRotateInterval);
      }
      toggleStep(1, true);
      startAutoRotation();
    }

    function startAutoRotation() {
      autoRotateInterval = setInterval(() => {
        // Determine max steps based on current view
        const isEmployeeView = document.querySelector('#employeeBtn.active');
        const maxSteps = isEmployeeView ? 6 : 8;
        
        currentStep = currentStep >= maxSteps ? 1 : currentStep + 1;
        toggleStep(currentStep, true); // Pass true to indicate this is auto-rotation
      }, 8000); // Rotate every 8 seconds
    }

    function animateProgressBar(stepNumber: number) {
      const stepItem = document.querySelector(`[data-step="${stepNumber}"]`);
      if (stepItem) {
        const progressBar = stepItem.querySelector('.step-progress');
        if (progressBar) {
          // Clear any existing animation by removing transition temporarily
          progressBar.style.transition = 'none';
          progressBar.style.width = '0%';
          // Force a reflow to ensure the reset is applied
          progressBar.offsetHeight;
          // Restore transition and start animation
          progressBar.style.transition = 'width 8s linear';
          progressBar.style.width = '100%';
        }
      }
    }

    function stopProgressBar(stepNumber: number) {
      const stepItem = document.querySelector(`[data-step="${stepNumber}"]`);
      if (stepItem) {
        const progressBar = stepItem.querySelector('.step-progress');
        if (progressBar) {
          // Stop the animation by removing transition and resetting width
          progressBar.style.transition = 'none';
          progressBar.style.width = '0%';
        }
      }
    }



    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      // Start with HR content by default
      updateContent('hr');
      
      // Add click event listeners to all step headers
      const stepHeaders = document.querySelectorAll('.step-header');
      stepHeaders.forEach((header, index) => {
        // Create and store the click handler
        const clickHandler = function(e: Event) {
          e.preventDefault();
          e.stopPropagation();
          const stepNumber = index + 1;
          toggleStep(stepNumber, false); // Pass false to indicate this is manual click
        };
        
        // Add the new listener for both click and touch events
        header.addEventListener('click', clickHandler);
        header.addEventListener('touchend', clickHandler);
      });

      // Trigger the hero highlight animation
      const heroHighlight = document.querySelector('.hero-highlight');
      if (heroHighlight) {
        setTimeout(() => {
          heroHighlight.classList.add('animated');
        }, 500);
      }



      // View toggle functionality (For HR/For Employees)
      const hrBtn = document.getElementById('hrBtn');
      const employeeBtn = document.getElementById('employeeBtn');
      
      if (hrBtn && employeeBtn) {
        hrBtn.addEventListener('click', function() {
          hrBtn.classList.add('active');
          employeeBtn.classList.remove('active');
          switchView('hr');
        });
        
        employeeBtn.addEventListener('click', function() {
          employeeBtn.classList.add('active');
          hrBtn.classList.remove('active');
          switchView('employee');
        });
      }
    });

    // Clean up intervals when page is unloaded
    window.addEventListener('beforeunload', function() {
      if (autoRotateInterval) clearInterval(autoRotateInterval);
    });
  </script>
