import Layout from '../layouts/Layout.astro';
---

<Layout title="How It Works | Hoogly" description="Quick to set up. Built to last." type="website">
  <style>
    body, html {
      background: #faf6f4 !important;
    }
    
    /* Override the global body gradient for this page */
    body {
      background: #faf6f4 !important;
    }

    .how-it-works-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 4rem 2rem;
    }

    .hero-section {
      text-align: center;
      margin-bottom: 3rem;
    }

    .content-section {
      display: flex;
      justify-content: center;
    }

    .left-section {
      max-width: 600px;
    }

    .right-section {
      display: none;
    }

    .hero-section {
      text-align: center;
      margin-bottom: 3rem;
    }

    .hero-title {
      font-family: 'Outfit', sans-serif;
      font-size: 3.5rem;
      font-weight: 600;
      color: #23221F;
      margin-bottom: 1rem;
      line-height: 1.1;
    }

    .hero-subtitle {
      font-family: 'Outfit', sans-serif;
      font-size: 1.4rem;
      font-weight: 400;
      color: #666;
      margin-bottom: 2rem;
    }

    .toggle-buttons {
      display: flex;
      gap: 1rem;
      margin-bottom: 3rem;
    }

    .toggle-btn {
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-family: 'Outfit', sans-serif;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
      border: 2px solid #E5E5E5;
      background: transparent;
      color: #23221F;
      /* Mobile touch improvements */
      min-height: 44px;
      -webkit-tap-highlight-color: rgba(0,0,0,0.1);
      touch-action: manipulation;
    }

    .toggle-btn.active {
      background: #23221F;
      color: white;
      border-color: #23221F;
    }

    .toggle-btn:not(.active):hover {
      background: #F5F5F5;
    }

    .hero-highlight {
      position: relative;
      color: #23221F;
      font-weight: 600;
      padding: 0.08em 0.5em;
      border-radius: 2em;
      display: inline-block;
      overflow: visible;
      background: none;
      z-index: 1;
      vertical-align: middle;
      font-size: inherit;
      line-height: inherit;
      font-family: inherit;
      transition: color 0.2s;
      word-wrap: break-word;
      hyphens: auto;
    }

    .hero-highlight::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 0%;
      background: rgba(255, 125, 97, 0.5);
      border-radius: 2em;
      z-index: 0;
      transition: width 1.2s cubic-bezier(0.77, 0, 0.175, 1);
    }

    .hero-highlight.animated::before {
      width: 100%;
    }

    .hero-highlight.animated {
      color: #23221F;
    }

    .hero-highlight-text {
      position: relative;
      z-index: 1;
    }

    .toggle-option {
      background: transparent;
      color: #666;
      border: none;
      font-weight: 400;
      opacity: 0.3;
      transition: all 0.3s ease;
    }

    .toggle-option.active {
      background: #23221F;
      color: white;
      font-weight: 600;
      opacity: 1;
      transition: all 0.3s ease;
    }

    .steps-container {
      display: flex;
      flex-direction: column;
      gap: 0;
    }

    .step-item {
      border-bottom: 1px solid #E5E5E5;
      transition: all 0.3s ease;
      position: relative;
    }

    .step-item:last-child {
      border-bottom: none;
    }

    .step-progress {
      position: absolute;
      bottom: 0;
      left: 0;
      height: 1px;
      background: #23221F;
      width: 0%;
      transition: width 8s linear;
    }

    .step-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem 0;
      cursor: pointer;
      transition: all 0.2s ease;
      /* Ensure touch targets are large enough for mobile */
      min-height: 44px;
      -webkit-tap-highlight-color: rgba(0,0,0,0.1);
      touch-action: manipulation;
    }

    .step-header:hover {
      background: rgba(0,0,0,0.02);
    }

    /* Mobile-specific touch improvements */
    @media (max-width: 768px) {
      .step-header {
        padding: 1rem 0;
        min-height: 48px; /* Larger touch target on mobile */
      }
      
      .step-title {
        font-size: 1rem; /* Slightly smaller on mobile */
      }
      
      .step-number {
        font-size: 1.1rem;
        margin-right: 0.75rem;
      }
    }

    .step-number {
      font-family: 'Outfit', sans-serif;
      font-size: 1.2rem;
      font-weight: 600;
      color: #23221F;
      margin-right: 1rem;
    }

    .step-title {
      font-family: 'Outfit', sans-serif;
      font-size: 1.1rem;
      font-weight: 500;
      color: #23221F;
      flex: 1;
    }

    .step-icon {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .step-item.active .step-icon {
      background: #23221F;
      transform: rotate(180deg);
    }

    .step-icon svg {
      width: 6px;
      height: 6px;
    }

    .chevron-path {
      stroke: #666;
    }

    .step-item.active .chevron-path {
      stroke: white !important;
    }

    .step-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
      padding: 0 0 0 0;
    }

    .step-item.active .step-content {
      max-height: 200px;
      padding: 0 0 1.5rem 0;
    }

