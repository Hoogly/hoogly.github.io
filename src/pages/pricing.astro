<style>
.animate-in {
  opacity: 0;
  transform: translateY(40px);
  transition: opacity 1.2s cubic-bezier(0.77,0,0.175,1), transform 1.2s cubic-bezier(0.77,0,0.175,1);
}
.animate-in.visible {
  opacity: 1;
  transform: translateY(0);
}

@media (max-width: 768px) {
  .pricing-columns {
    flex-direction: column !important;
    gap: 2rem !important;
    align-items: stretch !important;
  }
  .container {
    padding-left: 1rem !important;
    padding-right: 1rem !important;
    margin-top: 1.5rem !important;
  }
  .pricing-card {
    max-width: 100% !important;
    min-width: 0 !important;
    width: 100% !important;
    margin: 0 auto 0 auto !important;
    border-radius: 1.5rem !important;
    padding: 1.5rem !important;
  }
  .pricing-card-standard {
    margin-top: 0 !important;
    z-index: auto !important;
    position: static !important;
    background: #e6e1fa !important;
    min-height: unset !important;
    overflow: visible !important;
  }
  .pricing-card-standard > div[style*="position: absolute"] > div {
    border-radius: 1.5rem !important;
  }
  .pricing-card-standard > div[style*="position: absolute"] {
    position: static !important;
    width: 100% !important;
    top: 0 !important;
    left: 0 !important;
    transform: none !important;
    margin-bottom: 1rem !important;
  }
}
</style>

<script>
window.addEventListener('DOMContentLoaded', function() {
  // Animate .hero-highlight on scroll into view
  document.querySelectorAll('.hero-highlight').forEach(highlight => {
    const observer = new window.IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          highlight.classList.add('animated');
          observer.disconnect();
        }
      });
    }, { threshold: 0.3 });
    observer.observe(highlight);
  });

  // Animate pricing cards in on viewport
  document.querySelectorAll('.pricing-card.animate-in').forEach(card => {
    const observer = new window.IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          card.classList.add('visible');
          observer.disconnect();
        }
      });
    }, { threshold: 0 });
    observer.observe(card);
  });
});
</script> 