<script>
window.addEventListener('DOMContentLoaded', function() {
  // Animate .hero-highlight on scroll into view
  document.querySelectorAll('.hero-highlight').forEach(highlight => {
    const observer = new window.IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          highlight.classList.add('animated');
          observer.disconnect();
        }
      });
    }, { threshold: 0.3 });
    observer.observe(highlight);
  });

  // Animate pricing cards in on viewport
  document.querySelectorAll('.pricing-card.animate-in').forEach(card => {
    const observer = new window.IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          card.classList.add('visible');
          observer.disconnect();
        }
      });
    }, { threshold: 0 });
    observer.observe(card);
  });
});
</script> 