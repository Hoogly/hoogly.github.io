<style>
.nav-link {
  position: relative;
  display: inline-block;
  transition: color 0.2s;
  background: transparent !important;
}
.nav-link:hover {
  /* No color change */
  background: transparent !important;
  font-weight: 600;
}
.nav-link::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -6px;
  height: 18px;
  background: url('/images/Home/Underline.svg') no-repeat center bottom/100% 100%;
  background-color: transparent !important;
  opacity: 1;
  pointer-events: none;
  mask-image: linear-gradient(90deg, #000 0 0);
  mask-size: 0% 100%;
  mask-repeat: no-repeat;
  transition: mask-size 0.5s cubic-bezier(0.77,0,0.18,1);
}
.nav-link:hover::after {
  mask-size: 100% 100%;
  background-color: transparent !important;
}

/* Dropdown Styles */
.nav-item-dropdown {
  position: relative;
}

.dropdown-trigger {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
}

.dropdown-arrow {
  transition: transform 0.2s ease;
}

.nav-item-dropdown:hover .dropdown-arrow {
  transform: rotate(180deg);
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  width: 1000px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  opacity: 0;
  visibility: hidden;
  transform: translateX(-50%) translateY(-10px);
  transition: all 0.3s ease;
  z-index: 1000;
  margin-top: 1rem;
}

.nav-item-dropdown:hover .dropdown-menu {
  opacity: 1;
  visibility: visible;
  transform: translateX(-50%) translateY(0);
}

.dropdown-content {
  padding: 2rem;
}

.dropdown-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--color-neutral-900);
  margin-bottom: 1.5rem;
}

.dropdown-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}

.dropdown-item {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  padding: 1rem;
  border-radius: 8px;
  transition: background-color 0.2s ease;
}

.dropdown-item:hover {
  background-color: var(--color-neutral-50);
}

.dropdown-icon {
  flex-shrink: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-purple);
  border-radius: 6px;
  color: white;
}

.dropdown-item-content {
  flex: 1;
}

.dropdown-item-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--color-neutral-900);
  margin-bottom: 0.25rem;
  line-height: 1.3;
}

.dropdown-item-desc {
  font-size: 0.8rem;
  color: var(--color-neutral-600);
  line-height: 1.4;
}

/* Mobile Accordion - Hidden by default */
.mobile-accordion {
  display: none;
}

/* Mobile Responsive */
@media (max-width: 920px) {
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    width: 100%;
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000;
    margin-top: 0.5rem;
  }

  .nav-item-dropdown.active .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-content {
    padding: 1rem;
  }

  .dropdown-title {
    display: none; /* Hide title on mobile */
  }

  .dropdown-grid {
    display: none; /* Hide grid on mobile */
  }

  /* Mobile Solution Items */
  .mobile-accordion {
    display: block;
  }

  .mobile-solution-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-neutral-200);
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .mobile-solution-item:last-child {
    border-bottom: none;
  }

  .mobile-solution-item:hover {
    background-color: var(--color-neutral-50);
  }

  .mobile-solution-icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-purple);
    border-radius: 6px;
    color: white;
    flex-shrink: 0;
  }

  .mobile-solution-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-neutral-900);
  }

  /* Hide mobile close button */
  .mobile-dropdown-close {
    display: none;
  }
}

/* Hide mobile close button on desktop */
@media (min-width: 921px) {
  .mobile-dropdown-close {
    display: none;
  }
}

/* Header container to ensure consistent width across all pages */
.header-container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-6);
}

/* Mobile navigation centering for social icons */
@media (max-width: 920px) {
  .nav-links li a[aria-label*="Slack"],
  .nav-links li a[aria-label*="LinkedIn"] {
    justify-content: center;
    display: flex;
    align-items: center;
  }
  
  .nav-links li a[aria-label*="Slack"] img,
  .nav-links li a[aria-label*="LinkedIn"] svg {
    margin: 0 auto;
  }
}
</style>

<script is:inline>
	// Transparent to solid navbar on scroll
	window.addEventListener('scroll', function() {
		const navbar = document.getElementById('navbar');

		// some page don't have navbar
		if (!navbar) {
			return;
		}

		if (window.scrollY > 50) {
			navbar.classList.remove('navbar-transparent');
			navbar.classList.add('navbar-solid');
		} else {
			navbar.classList.remove('navbar-solid');
			navbar.classList.add('navbar-transparent');
		}
	});

	// Mobile menu toggle functionality
	document.addEventListener("astro:page-load", function () {
		const mobileMenuToggle = document.getElementById('mobileMenuToggle');
		const navLinks = document.getElementById('navLinks');
		const navbar = document.getElementById('navbar');

		// some page don't have these
		if (!navbar || !navLinks || !mobileMenuToggle) {
			return;
		}

		function closeMenu() {
			navLinks.classList.remove('nav-links-open');
			mobileMenuToggle.classList.remove('mobile-menu-toggle-open');
			navbar.classList.remove('navbar-mobile-open');
		}

		function openMenu() {
			navLinks.classList.add('nav-links-open');
			mobileMenuToggle.classList.add('mobile-menu-toggle-open');
			navbar.classList.add('navbar-mobile-open');
		}

		mobileMenuToggle.addEventListener('click', function(e) {
			e.stopPropagation();
			if (navLinks.classList.contains('nav-links-open')) {
				closeMenu();
			} else {
				openMenu();
			}
		});

		navLinks.addEventListener('click', function(e) {
			if (e.target.tagName === 'A') {
				closeMenu();
			}
		});

		document.addEventListener('click', function(e) {
			if (!navbar.contains(e.target)) {
				closeMenu();
			}
		});

		// Dropdown functionality
		const dropdownTrigger = document.querySelector('.dropdown-trigger');
		const dropdownMenu = document.querySelector('.dropdown-menu');
		const navItemDropdown = document.querySelector('.nav-item-dropdown');
		
		if (dropdownTrigger && dropdownMenu && navItemDropdown) {
			let hoverTimeout;
			const isMobile = window.innerWidth <= 920;
			
			// Desktop hover behavior
			if (!isMobile) {
				// Show dropdown on hover
				dropdownTrigger.addEventListener('mouseenter', function() {
					clearTimeout(hoverTimeout);
					dropdownMenu.style.opacity = '1';
					dropdownMenu.style.visibility = 'visible';
					dropdownMenu.style.transform = 'translateX(-50%) translateY(0)';
				});
				
				// Hide dropdown when mouse leaves
				dropdownTrigger.addEventListener('mouseleave', function() {
					hoverTimeout = setTimeout(() => {
						dropdownMenu.style.opacity = '0';
						dropdownMenu.style.visibility = 'hidden';
						dropdownMenu.style.transform = 'translateX(-50%) translateY(-10px)';
					}, 150);
				});
				
				// Keep dropdown open when hovering over it
				dropdownMenu.addEventListener('mouseenter', function() {
					clearTimeout(hoverTimeout);
				});
				
				dropdownMenu.addEventListener('mouseleave', function() {
					hoverTimeout = setTimeout(() => {
						dropdownMenu.style.opacity = '0';
						dropdownMenu.style.visibility = 'hidden';
						dropdownMenu.style.transform = 'translateX(-50%) translateY(-10px)';
					}, 150);
				});
			} else {
				// Mobile click behavior - toggle accordion
				dropdownTrigger.addEventListener('click', function(e) {
					e.preventDefault();
					navItemDropdown.classList.toggle('active');
				});

				// Close dropdown when clicking outside
				document.addEventListener('click', function(e) {
					if (!navItemDropdown.contains(e.target)) {
						navItemDropdown.classList.remove('active');
					}
				});
			}
		}
	});
</script> 